<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="120"
             x:Class="MarkDownAvalonia.Controls.PostItemControl"
             Background="#312F2F" BorderThickness="0 1 0 0" BorderBrush="#473A3B" PointerEnter="GetFocus" PointerLeave="LostFocus" Foreground="silver" PointerPressed="Clicked">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="itemTitleTbk" FontSize="16" Margin="5" Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Grid.ColumnSpan="2" TextTrimming="CharacterEllipsis">这是测试标题,再长一点也是可以的这是测试标题,再长一点也是可以的</TextBlock>
        <TextBlock Name="itemTimeTbk" Grid.Row="2" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5" TextTrimming="CharacterEllipsis">2020/12/01 11:11:00</TextBlock>
    </Grid>
</UserControl>